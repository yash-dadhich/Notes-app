<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blackbg</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="backgroundColor">
        <item name="background">@color/black</item>
    </style>
    <style name="appNameColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="itemBackgroundColor">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="itemTextColor">
        <item name="android:fontFamily">@font/caveat_variable_font_wght</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>